---
import type { CollectionEntry } from "astro:content";
import TagPill from "./TagPill.astro";
import Time from "./Time.svelte";

interface Props {
    session: CollectionEntry<"sessions">;
    variant?: "default" | "compact";
}

const { session, variant = "default" } = Astro.props;
const {
    status,
    date,
    start,
    duration,
    themeTitle,
    themeSummary,
    tags,
    starterList,
} = session.data;

// Format the date nicely
const formattedDate = date.toLocaleDateString("en-US", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
    timeZone: "utc",
});

// Check if session is in the past
const isPast = date < new Date();

// Status configuration
const statusConfig = {
    current: {
        label: "Up Next",
        classes: "bg-linear-to-r from-mystic-500 to-bermuda-500 text-white",
        icon: "fa-solid fa-sharp fa-sparkles",
    },
    upcoming: {
        label: "Upcoming",
        classes:
            "bg-lantern-100 dark:bg-lantern-900/50 text-lantern-800 dark:text-lantern-300 border border-lantern-300 dark:border-lantern-700",
        icon: "fa-solid fa-sharp fa-calendar",
    },
    past: {
        label: "Past",
        classes:
            "bg-mystic-100 dark:bg-mystic-800 text-mystic-600 dark:text-mystic-400",
        icon: "fa-solid fa-sharp fa-book",
    },
};

const config = statusConfig[status];
---

{
    variant === "compact" ? (
        <article class:list={["card card-hover p-4", isPast && "opacity-75"]}>
            <a href={`/sessions/${session.id}`} class="block group">
                <div class="flex items-start justify-between gap-4">
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center gap-2 mb-1">
                            <span class="text-lg text-mystic-500 dark:text-mystic-400">
                                <i class="fa-solid fa-sharp fa-calendar" />
                            </span>
                            <time
                                datetime={date.toISOString()}
                                class="text-sm font-medium text-mystic-600 dark:text-mystic-400"
                            >
                                {formattedDate}
                            </time>
                        </div>
                        <h3 class="font-display font-semibold text-mystic-900 dark:text-mystic-100 group-hover:text-mystic-700 dark:group-hover:text-mystic-300 transition-colors ml-7">
                            {themeTitle}
                        </h3>

                        <p class="text-sm text-mystic-500 dark:text-mystic-500 ml-7">
                            <Time start={start} duration={duration} />
                        </p>
                    </div>
                    <span
                        class:list={[
                            "inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold shrink-0",
                            config.classes,
                        ]}
                    >
                        <i class={config.icon} aria-hidden="true" />
                        {config.label}
                    </span>
                </div>
            </a>
        </article>
    ) : (
        <article class:list={["card card-hover", isPast && "opacity-80"]}>
            <a href={`/sessions/${session.id}`} class="block group">
                <div class="p-6">
                    {/* Header with date badge and status */}
                    <div class="flex items-start justify-between gap-4 mb-4">
                        <div class="flex items-center gap-3">
                            {/* Calendar icon/badge */}
                            <div class="w-14 h-14 bg-linear-to-br from-mystic-500 to-mystic-600 rounded-xl flex flex-col items-center justify-center text-white shadow-lg shadow-mystic-500/20">
                                <span class="text-xs font-medium uppercase tracking-wide">
                                    {date.toLocaleDateString("en-US", {
                                        month: "short",
                                        timeZone: "utc",
                                    })}
                                </span>
                                <span class="text-xl font-bold leading-none">
                                    {date.getUTCDate()}
                                </span>
                            </div>
                            <div>
                                <h3 class="font-display font-semibold text-mystic-900 dark:text-mystic-100 group-hover:text-mystic-700 dark:group-hover:text-mystic-300 transition-colors">
                                    {themeTitle}
                                </h3>
                                <time
                                    datetime={date.toISOString()}
                                    class="text-sm text-mystic-600 dark:text-mystic-300"
                                >
                                    {formattedDate}
                                </time>
                            </div>
                        </div>
                        <span
                            class:list={[
                                "inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold shrink-0",
                                config.classes,
                            ]}
                        >
                            <i class={config.icon} aria-hidden="true" />
                            {config.label}
                        </span>
                    </div>

                    {/* Summary */}
                    <p class="text-mystic-600 dark:text-mystic-300 leading-relaxed line-clamp-2 mb-4">
                        {themeSummary}
                    </p>

                    {/* Details */}
                    <div class="space-y-2 text-sm mb-4">
                        <div class="flex items-center gap-2 text-mystic-600 dark:text-mystic-300">
                            <span class="text-mystic-400 dark:text-mystic-500 w-4">
                                <i class="fa-solid fa-sharp fa-clock" />
                            </span>
                            <Time start={start} duration={duration} />
                        </div>

                        {starterList && starterList.length > 0 && (
                            <div class="flex items-center gap-2 text-mystic-600 dark:text-mystic-300">
                                <span class="text-mystic-400 dark:text-mystic-500 w-4">
                                    <i class="fa-solid fa-sharp fa-books" />
                                </span>
                                <span>
                                    {starterList.length}
                                    {` book${starterList.length !== 1 ? "s" : ""}`}{" "}
                                    on starter list
                                </span>
                            </div>
                        )}
                    </div>

                    {/* Tags */}
                    {tags && tags.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-4">
                            {tags.slice(0, 4).map((tag) => (
                                <TagPill
                                    label={tag}
                                    variant="subtle"
                                    size="sm"
                                />
                            ))}
                        </div>
                    )}

                    {/* CTA */}
                    <div class="pt-4 border-t border-mystic-100 dark:border-mystic-800">
                        <span class="inline-flex items-center gap-2 text-sm font-semibold text-mystic-600 dark:text-mystic-300 group-hover:text-mystic-800 dark:group-hover:text-mystic-100 transition-colors">
                            View session details
                            <i class="fa-solid fa-sharp fa-chevron-right text-xs transform group-hover:translate-x-1 transition-transform" />
                        </span>
                    </div>
                </div>
            </a>
        </article>
    )
}

---
import Layout from "../../layouts/Layout.astro";
import SessionCard from "../../components/SessionCard.astro";
import { getCollection } from "astro:content";

// Get all sessions
const sessions = await getCollection("sessions");

// Sort sessions by status and date
const sortOrder = { current: 0, upcoming: 1, past: 2 };

const sortedSessions = sessions.sort((a, b) => {
    // First sort by status
    const statusDiff = sortOrder[a.data.status] - sortOrder[b.data.status];
    if (statusDiff !== 0) return statusDiff;

    // Then by date
    const dateA = new Date(a.data.date).getTime();
    const dateB = new Date(b.data.date).getTime();

    if (a.data.status === "past") {
        return dateB - dateA; // Most recent first for past
    }
    return dateA - dateB; // Soonest first for upcoming
});

// Group sessions by status
const currentSession = sortedSessions.find((s) => s.data.status === "current");
const pastSessions = sortedSessions.filter((s) => s.data.status === "past");
---

<Layout
    title="Sessions"
    description="Browse all sessions from the Bermuda Triangle Society book club. Find upcoming meetings and explore past themes."
>
    <!-- Page Header -->
    <section
        class="bg-linear-to-b from-mystic-900 to-mystic-800 text-white py-16 md:py-20"
    >
        <div class="max-w-4xl mx-auto px-4 text-center">
            <span
                class="inline-flex items-center gap-2 text-lantern-400 text-sm font-semibold uppercase tracking-wide mb-4"
            >
                <i class="fa-solid fa-sharp fa-books"></i>
                Our Sessions
            </span>
            <h1
                class="text-4xl md:text-5xl font-display font-bold text-white mb-6"
            >
                Sessions
            </h1>
            <p class="text-xl text-mystic-200 max-w-2xl mx-auto">
                Each month we pick a theme and meet to share what we've read.
                Browse our upcoming and past sessions below.
            </p>
        </div>
    </section>

    <!-- Sessions Content -->
    <section class="py-16 md:py-20 transition-colors duration-300">
        <div class="max-w-6xl mx-auto px-4">
            <!-- Current Session -->
            {
                currentSession && (
                    <div class="mb-16">
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-6 flex items-center gap-3">
                            <span class="w-10 h-10 bg-linear-to-br from-mystic-500 to-bermuda-500 text-white rounded-xl flex items-center justify-center">
                                <i class="fa-solid fa-sharp fa-sparkles" />
                            </span>
                            Next Session
                        </h2>
                        <div class="grid lg:grid-cols-3 gap-6">
                            <div class="lg:col-span-2">
                                <SessionCard session={currentSession} />
                            </div>
                        </div>
                    </div>
                )
            }

            <!-- No Upcoming Sessions Message -->
            {
                !currentSession && (
                    <div class="mb-16 card p-8 text-center bg-linear-to-br from-mystic-50 to-bermuda-50 dark:from-mystic-900 dark:to-mystic-950">
                        <span class="text-4xl text-mystic-400 mb-4 block">
                            <i class="fa-solid fa-sharp fa-books" />
                        </span>
                        <h2 class="text-xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-2">
                            No Upcoming Sessions Scheduled
                        </h2>
                        <p class="text-mystic-600 dark:text-mystic-400 mb-4">
                            Check back soon! We typically meet monthly on
                            Saturdays.
                        </p>
                        <a
                            href="/about"
                            class="text-bermuda-600 dark:text-bermuda-400 hover:text-bermuda-700 dark:hover:text-bermuda-300 font-medium"
                        >
                            Learn how our club works{" "}
                            <i class="fa-solid fa-sharp fa-arrow-right" />
                        </a>
                    </div>
                )
            }

            <!-- Past Sessions -->
            {
                pastSessions.length > 0 && (
                    <div>
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-6 flex items-center gap-3">
                            <span class="w-10 h-10 bg-mystic-200 dark:bg-mystic-800 text-mystic-600 dark:text-mystic-400 rounded-xl flex items-center justify-center">
                                <i class="fa-solid fa-sharp fa-book" />
                            </span>
                            Past Sessions
                        </h2>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {pastSessions.map((session) => (
                                <SessionCard
                                    session={session}
                                    variant="compact"
                                />
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- Empty State -->
            {
                sessions.length === 0 && (
                    <div class="text-center py-12">
                        <span class="text-6xl text-mystic-400 mb-4 block">
                            <i class="fa-solid fa-sharp fa-books" />
                        </span>
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-2">
                            No sessions yet!
                        </h2>
                        <p class="text-mystic-600 dark:text-mystic-400 mb-6">
                            Check back soon for our upcoming sessions.
                        </p>
                        <a href="/submit" class="btn btn-primary">
                            Submit a Theme Idea
                        </a>
                    </div>
                )
            }
        </div>
    </section>

    <!-- Location Info -->
    <section
        class="py-12 bg-mystic-50 dark:bg-mystic-900 transition-colors duration-300"
    >
        <div class="max-w-4xl mx-auto px-4">
            <div
                class="card p-8 bg-linear-to-br from-bermuda-50 to-lantern-50 dark:from-mystic-800 dark:to-mystic-950"
            >
                <h3
                    class="text-xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-4 flex items-center gap-2"
                >
                    <span class="text-bermuda-500"
                        ><i class="fa-solid fa-sharp fa-location-dot"></i></span
                    >
                    Meeting Location
                </h3>
                <div class="grid sm:grid-cols-2 gap-6">
                    <div>
                        <address
                            class="not-italic text-mystic-600 dark:text-mystic-400"
                        >
                            <a
                                href="https://bnl.bm"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="font-semibold text-bermuda-600 dark:text-bermuda-400 hover:text-bermuda-700 dark:hover:text-bermuda-300"
                            >
                                Bermuda National Library
                            </a><br />
                            13 Queen St.<br />
                            Hamilton HM 11<br />
                            Bermuda
                        </address>
                    </div>
                    <div class="text-mystic-600 dark:text-mystic-400">
                        <p>
                            <strong class="text-mystic-800 dark:text-mystic-200"
                                >When:</strong
                            > Monthly on Saturdays
                        </p>
                        <p>
                            <strong class="text-mystic-800 dark:text-mystic-200"
                                >Time:</strong
                            > 2:00 PM â€“ 3:30 PM
                        </p>
                        <p class="mt-2 text-sm">
                            Street parking available on Queen Street.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12 transition-colors duration-300">
        <div class="max-w-3xl mx-auto px-4 text-center">
            <h2
                class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-4"
            >
                Have a Theme Idea?
            </h2>
            <p class="text-mystic-600 dark:text-mystic-400 mb-6">
                We're always looking for fresh themes. "Cozy Apocalypse"?
                "Unreliable Narrators"? "Space Opera"? Submit your idea!
            </p>
            <a href="/submit" class="btn btn-secondary"> Submit a Theme </a>
        </div>
    </section>
</Layout>

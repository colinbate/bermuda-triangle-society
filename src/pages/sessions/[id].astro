---
import Layout from "../../layouts/Layout.astro";
import StarterList from "../../components/StarterList.astro";
import Time from "../../components/Time.svelte";
import { getCollection } from "astro:content";
import { render } from "astro:content";

export async function getStaticPaths() {
    const sessions = await getCollection("sessions");
    return sessions.map((session) => ({
        params: { id: session.id },
        props: { session },
    }));
}

const { session } = Astro.props;
const {
    title,
    status,
    date,
    start,
    duration,
    locationId,
    themeTitle,
    themeSummary,
    tags,
    starterList,
} = session.data;

// Get location data if available
const locations = await getCollection("locations");
const location = locationId
    ? locations.find((l) => l.data.id === locationId)
    : null;

// Render the MDX content
const { Content } = await render(session);

// Format the date nicely
const formattedDate = date.toLocaleDateString("en-US", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
    timeZone: "utc",
});

// Check if session is in the past
const isPast = date < new Date();

// Status configuration
const statusConfig = {
    current: {
        label: "Next Session",
        classes: "bg-linear-to-r from-mystic-500 to-bermuda-500 text-white",
        icon: "fa-solid fa-sharp fa-sparkles",
    },
    upcoming: {
        label: "Upcoming",
        classes:
            "bg-lantern-100 dark:bg-lantern-900/50 text-lantern-800 dark:text-lantern-300 border border-lantern-300 dark:border-lantern-700",
        icon: "fa-solid fa-sharp fa-calendar",
    },
    past: {
        label: "Past Session",
        classes:
            "bg-mystic-100 dark:bg-mystic-800 text-mystic-600 dark:text-mystic-400",
        icon: "fa-solid fa-sharp fa-book",
    },
};

const config = statusConfig[status];
---

<Layout title={title} description={themeSummary}>
    <!-- Page Header -->
    <section
        class="bg-linear-to-b from-mystic-900 via-mystic-800 to-mystic-700 text-white py-16 md:py-24 relative overflow-hidden"
    >
        <!-- Background decoration -->
        <div class="absolute inset-0 bg-stars opacity-30" aria-hidden="true">
        </div>
        <div
            class="absolute top-1/4 right-1/4 w-64 h-64 bg-mystic-500/20 rounded-full blur-3xl"
            aria-hidden="true"
        >
        </div>
        <div
            class="absolute bottom-1/4 left-1/4 w-48 h-48 bg-bermuda-500/20 rounded-full blur-3xl"
            aria-hidden="true"
        >
        </div>

        <div class="relative max-w-4xl mx-auto px-4">
            <!-- Breadcrumb -->
            <nav class="mb-6">
                <a
                    href="/sessions"
                    class="text-mystic-300 hover:text-white transition-colors text-sm inline-flex items-center gap-2"
                >
                    <i class="fa-solid fa-sharp fa-chevron-left"></i>
                    All Sessions
                </a>
            </nav>

            <!-- Status Badge -->
            <span
                class:list={[
                    "inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-sm font-semibold mb-6",
                    config.classes,
                ]}
            >
                <i class={config.icon} aria-hidden="true"></i>
                {config.label}
            </span>

            <!-- Title -->
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight text-white"
            >
                {themeTitle}
            </h1>

            <!-- Summary -->
            <p class="text-xl text-mystic-200 max-w-2xl leading-relaxed">
                {themeSummary}
            </p>

            <!-- Meta info -->
            <div
                class="mt-8 flex flex-wrap items-center gap-6 text-sm text-mystic-300"
            >
                <div class="flex items-center gap-2">
                    <i
                        class="fa-solid fa-sharp fa-calendar-day text-lantern-400"
                    ></i>
                    <span>
                        <strong class="text-white">{formattedDate}</strong>
                    </span>
                </div>

                <div class="flex items-center gap-2">
                    <i class="fa-solid fa-sharp fa-clock text-lantern-400"></i>
                    <div>
                        <Time start={start} duration={duration} />
                    </div>
                </div>

                {
                    location && (
                        <div class="flex items-center gap-2">
                            <i class="fa-solid fa-sharp fa-location-dot text-bermuda-400" />
                            <span>{location.data.name}</span>
                        </div>
                    )
                }
            </div>

            {
                status === "current" && (
                    <div>
                        <a
                            href={`/sessions/${session.id}.ics`}
                            class="btn btn-link gap-2 px-3 py-2 mt-4 text-sm"
                        >
                            <i class="fa-solid fa-sharp fa-calendar-arrow-down" />{" "}
                            Download calendar invite
                        </a>
                    </div>
                )
            }

            <!-- Tags -->
            {
                tags && tags.length > 0 && (
                    <div class="mt-6 flex flex-wrap gap-2">
                        {tags.map((tag: string) => (
                            <span class="px-3 py-1 bg-mystic-700/50 text-mystic-200 text-sm rounded-full border border-mystic-600/50">
                                {tag}
                            </span>
                        ))}
                    </div>
                )
            }
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-12 md:py-16 transition-colors duration-300">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid lg:grid-cols-5 gap-12">
                <!-- Session Content -->
                <div class="lg:col-span-3">
                    <div class="prose prose-mystic max-w-none">
                        <Content />
                    </div>

                    <!-- What to bring -->
                    {
                        !isPast && (
                            <div class="card p-6 mt-12">
                                <h3 class="text-lg font-display font-semibold mb-3 flex items-center gap-2">
                                    <span class="text-lantern-500">
                                        <i class="fa-solid fa-sharp fa-sparkles" />
                                    </span>
                                    What to Bring
                                </h3>
                                <ul class="text-sm text-mystic-700 mb-6 dark:text-mystic-200 space-y-2">
                                    <li class="flex items-start gap-2">
                                        <span class="text-lantern-500">•</span>A
                                        book that fits the theme (optional!)
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="text-lantern-500">•</span>A
                                        2-3 minute pitch if sharing
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="text-lantern-500">•</span>
                                        Theme ideas for future sessions
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="text-lantern-500">•</span>
                                        Your enthusiasm (required!)
                                    </li>
                                </ul>
                                <a
                                    href="/about"
                                    class="inline-flex items-center gap-2 text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 font-medium transition-colors"
                                >
                                    Learn how meetings work
                                    <i class="fa-solid fa-sharp fa-arrow-right" />
                                </a>
                            </div>
                        )
                    }
                </div>

                <!-- Sidebar -->
                <aside class="lg:col-span-2">
                    <!-- Starter List -->
                    {
                        starterList && starterList.length > 0 ? (
                            <div class="top-24">
                                <div class="bg-linear-to-br from-mystic-50 to-bermuda-50 dark:from-mystic-900 dark:to-mystic-950 rounded-2xl p-6 border border-mystic-100 dark:border-mystic-950">
                                    <StarterList books={starterList} />
                                </div>
                            </div>
                        ) : (
                            <div class="bg-mystic-50 dark:bg-mystic-900 rounded-2xl p-6 border border-mystic-100 dark:border-mystic-800 text-center">
                                <span class="text-4xl text-mystic-400 mb-4 block">
                                    <i class="fa-solid fa-sharp fa-books" />
                                </span>
                                <h3 class="font-display font-semibold text-mystic-800 dark:text-mystic-200 mb-2">
                                    Starter List Coming Soon
                                </h3>
                                <p class="text-mystic-600 dark:text-mystic-400 text-sm">
                                    We'll build the starter list together at the
                                    meeting before this session.
                                </p>
                            </div>
                        )
                    }

                    <!-- Location Card -->
                    {
                        location && (
                            <div class="mt-6 card p-6">
                                <h3 class="text-lg font-display font-semibold mb-3 flex items-center gap-2">
                                    <span class="text-bermuda-500">
                                        <i class="fa-location-dot fa-solid fa-sharp" />
                                    </span>
                                    Location
                                </h3>
                                <address class="not-italic text-mystic-600 dark:text-mystic-300 text-sm">
                                    {location.data.name}
                                    <br />
                                    {location.data.address}
                                </address>
                                <a
                                    href={location.data.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center gap-1 mt-3 text-sm text-bermuda-600 hover:text-bermuda-700 dark:text-bermuda-300 hover:dark:text-bermuda-400"
                                >
                                    Visit website
                                    <svg
                                        class="w-3 h-3"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        />
                                    </svg>
                                </a>
                            </div>
                        )
                    }

                    <!-- Quick links -->
                    <div
                        class="mt-6 p-4 bg-white dark:bg-mystic-950 rounded-xl border border-mystic-100 dark:border-mystic-800"
                    >
                        <h4
                            class="font-semibold text-mystic-800 dark:text-mystic-200 text-sm mb-3"
                        >
                            Quick Links
                        </h4>
                        <ul class="space-y-2 text-sm">
                            <li>
                                <a
                                    href="/sessions"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i class="fa-solid fa-sharp fa-calendar w-4"
                                    ></i>
                                    View all sessions
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/submit"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i
                                        class="fa-solid fa-sharp fa-lightbulb w-4"
                                    ></i>
                                    Submit a theme idea
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/about"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i
                                        class="fa-solid fa-sharp fa-circle-info w-4"
                                    ></i>
                                    How it works
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/find-books"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i
                                        class="fa-solid fa-sharp fa-book-open-reader w-4"
                                    ></i>
                                    Find books
                                </a>
                            </li>
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </section>

    <!-- Navigation -->
    <section
        class="py-8 border-t border-mystic-100 dark:border-mystic-800 transition-colors duration-300"
    >
        <div class="max-w-4xl mx-auto px-4 flex justify-between">
            <a
                href="/sessions"
                class="inline-flex items-center gap-2 text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 font-medium transition-colors"
            >
                <i class="fa-solid fa-sharp fa-chevron-left"></i>
                All Sessions
            </a>
        </div>
    </section>
</Layout>

---
import Layout from "../../layouts/Layout.astro";
import StarterList from "../../components/StarterList.astro";
import TagPill from "../../components/TagPill.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
    const themes = await getCollection("themes");
    return themes.map((theme) => ({
        params: { id: theme.id },
        props: { theme },
    }));
}

const { theme } = Astro.props;
const { title, summary, status, meetingDate, voteDate, tags, starterList } =
    theme.data;
const { Content } = await render(theme);

// Status configuration
const statusConfig = {
    current: {
        label: "Current Theme",
        classes: "bg-linear-to-r from-mystic-500 to-bermuda-500 text-white",
        icon: "fa-solid fa-sharp fa-sparkles",
    },
    upcoming: {
        label: "Up Next",
        classes:
            "bg-lantern-100 dark:bg-lantern-900/50 text-lantern-800 dark:text-lantern-300 border border-lantern-300 dark:border-lantern-700",
        icon: "fa-solid fa-sharp fa-calendar",
    },
    past: {
        label: "Past Theme",
        classes:
            "bg-mystic-100 dark:bg-mystic-800 text-mystic-600 dark:text-mystic-400",
        icon: "fa-solid fa-sharp fa-book",
    },
};

const config = statusConfig[status];

function formatDate(dateStr: string): string {
    return new Date(dateStr).toLocaleDateString("en-US", {
        weekday: "long",
        year: "numeric",
        month: "long",
        day: "numeric",
    });
}
---

<Layout title={title} description={summary}>
    <!-- Page Header -->
    <section
        class="bg-linear-to-b from-mystic-900 via-mystic-800 to-mystic-700 text-white py-16 md:py-24 relative overflow-hidden"
    >
        <!-- Background decoration -->
        <div class="absolute inset-0 bg-stars opacity-30" aria-hidden="true">
        </div>
        <div
            class="absolute top-1/4 right-1/4 w-64 h-64 bg-mystic-500/20 rounded-full blur-3xl"
            aria-hidden="true"
        >
        </div>
        <div
            class="absolute bottom-1/4 left-1/4 w-48 h-48 bg-bermuda-500/20 rounded-full blur-3xl"
            aria-hidden="true"
        >
        </div>

        <div class="relative max-w-4xl mx-auto px-4">
            <!-- Breadcrumb -->
            <nav class="mb-6">
                <a
                    href="/themes"
                    class="text-mystic-300 hover:text-white transition-colors text-sm inline-flex items-center gap-2"
                >
                    <i class="fa-solid fa-sharp fa-chevron-left"></i>
                    All Themes
                </a>
            </nav>

            <!-- Status Badge -->
            <span
                class:list={[
                    "inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-sm font-semibold mb-6",
                    config.classes,
                ]}
            >
                <i class={config.icon} aria-hidden="true"></i>
                {config.label}
            </span>

            <!-- Title -->
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight text-white"
            >
                {title}
            </h1>

            <!-- Summary -->
            <p class="text-xl text-mystic-200 max-w-2xl leading-relaxed">
                {summary}
            </p>

            <!-- Meta info -->
            <div
                class="mt-8 flex flex-wrap items-center gap-6 text-sm text-mystic-300"
            >
                {
                    meetingDate && (
                        <div class="flex items-center gap-2">
                            <i class="fa-solid fa-sharp fa-calendar-day text-lantern-400" />
                            <span>
                                Meeting:{" "}
                                <strong class="text-white">
                                    {formatDate(meetingDate)}
                                </strong>
                            </span>
                        </div>
                    )
                }
                {
                    voteDate && (
                        <div class="flex items-center gap-2">
                            <i class="fa-solid fa-sharp fa-circle-check text-bermuda-400" />
                            <span>Voted: {formatDate(voteDate)}</span>
                        </div>
                    )
                }
            </div>

            <!-- Tags -->
            {
                tags && tags.length > 0 && (
                    <div class="mt-6 flex flex-wrap gap-2">
                        {tags.map((tag: string) => (
                            <span class="px-3 py-1 bg-mystic-700/50 text-mystic-200 text-sm rounded-full border border-mystic-600/50">
                                {tag}
                            </span>
                        ))}
                    </div>
                )
            }
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-12 md:py-16 transition-colors duration-300">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid lg:grid-cols-5 gap-12">
                <!-- Theme Content -->
                <div class="lg:col-span-3">
                    <div class="prose max-w-none">
                        <Content />
                    </div>

                    <!-- CTA for current/upcoming themes -->
                    {
                        (status === "current" || status === "upcoming") && (
                            <div class="mt-12 p-6 bg-linear-to-r from-mystic-100 to-bermuda-100 dark:from-mystic-800 dark:to-mystic-950 rounded-2xl border border-mystic-200 dark:border-mystic-700">
                                <h3 class="text-lg font-display font-semibold text-mystic-900 dark:text-mystic-100 mb-2 flex items-center gap-2">
                                    <span class="text-lantern-500">
                                        <i class="fa-solid fa-sharp fa-sparkles" />
                                    </span>
                                    Want to participate?
                                </h3>
                                <p class="text-mystic-600 dark:text-mystic-400 mb-4">
                                    Grab a book or audiobook that fits this
                                    theme and bring it to the meeting! Share a
                                    quick pitch about what you readâ€”did it work
                                    for you? Who would love it?
                                </p>
                                <a
                                    href="/meetings"
                                    class="inline-flex items-center gap-2 text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 font-medium transition-colors"
                                >
                                    View meeting details
                                    <i class="fa-solid fa-sharp fa-arrow-right" />
                                </a>
                            </div>
                        )
                    }
                </div>

                <!-- Starter List Sidebar -->
                <aside class="lg:col-span-2">
                    {
                        starterList && starterList.length > 0 ? (
                            <div class=" top-24">
                                <div class="bg-linear-to-br from-mystic-50 to-bermuda-50 dark:from-mystic-900 dark:to-mystic-950 rounded-2xl p-6 border border-mystic-100 dark:border-mystic-950">
                                    <StarterList books={starterList} />
                                </div>
                            </div>
                        ) : (
                            <div class="bg-mystic-50 dark:bg-mystic-900 rounded-2xl p-6 border border-mystic-100 dark:border-mystic-800 text-center">
                                <span class="text-4xl text-mystic-400 mb-4 block">
                                    <i class="fa-solid fa-sharp fa-books" />
                                </span>
                                <h3 class="font-display font-semibold text-mystic-800 dark:text-mystic-200 mb-2">
                                    Starter List Coming Soon
                                </h3>
                                <p class="text-mystic-600 dark:text-mystic-400 text-sm">
                                    We'll build the starter list together at the
                                    meeting before this theme.
                                </p>
                            </div>
                        )
                    }

                    <!-- Quick links -->
                    <div
                        class="mt-6 p-4 bg-white dark:bg-mystic-950 rounded-xl border border-mystic-100 dark:border-mystic-800"
                    >
                        <h4
                            class="font-semibold text-mystic-800 dark:text-mystic-200 text-sm mb-3"
                        >
                            Quick Links
                        </h4>
                        <ul class="space-y-2 text-sm">
                            <li>
                                <a
                                    href="/meetings"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i class="fa-solid fa-sharp fa-calendar w-4"
                                    ></i> View meetings
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/submit"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i
                                        class="fa-solid fa-sharp fa-lightbulb w-4"
                                    ></i> Submit a theme idea
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/themes"
                                    class="text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 transition-colors flex items-center gap-2"
                                >
                                    <i
                                        class="fa-solid fa-sharp fa-book-open w-4"
                                    ></i> Browse all themes
                                </a>
                            </li>
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </section>

    <!-- Navigation -->
    <section
        class="py-8 border-t border-mystic-100 dark:border-mystic-800 transition-colors duration-300"
    >
        <div class="max-w-4xl mx-auto px-4 flex justify-between">
            <a
                href="/themes"
                class="inline-flex items-center gap-2 text-mystic-600 dark:text-mystic-400 hover:text-mystic-800 dark:hover:text-mystic-200 font-medium transition-colors"
            >
                <i class="fa-solid fa-sharp fa-chevron-left"></i>
                All Themes
            </a>
        </div>
    </section>
</Layout>

---
import Layout from "../../layouts/Layout.astro";
import ThemeCard from "../../components/ThemeCard.astro";
import { getCollection } from "astro:content";

// Get all themes
const themes = await getCollection("themes");

// Sort themes: current first, then upcoming, then past by date
const sortOrder = { current: 0, upcoming: 1, past: 2 };

const sortedThemes = themes.sort((a, b) => {
    // First sort by status
    const statusDiff = sortOrder[a.data.status] - sortOrder[b.data.status];
    if (statusDiff !== 0) return statusDiff;

    // Then by meeting date (most recent first for past, soonest first for upcoming)
    if (a.data.meetingDate && b.data.meetingDate) {
        const dateA = new Date(a.data.meetingDate).getTime();
        const dateB = new Date(b.data.meetingDate).getTime();

        if (a.data.status === "past") {
            return dateB - dateA; // Most recent first for past
        }
        return dateA - dateB; // Soonest first for upcoming
    }
    return 0;
});

// Group themes by status
const currentTheme = sortedThemes.find((t) => t.data.status === "current");
const upcomingThemes = sortedThemes.filter((t) => t.data.status === "upcoming");
const pastThemes = sortedThemes.filter((t) => t.data.status === "past");
---

<Layout
    title="Themes"
    description="Browse all themes from the Bermuda Triangle Society book club. Find your next read from our curated recommendations."
>
    <!-- Page Header -->
    <section
        class="bg-linear-to-b from-mystic-900 to-mystic-800 text-white py-16 md:py-20"
    >
        <div class="max-w-4xl mx-auto px-4 text-center">
            <span
                class="inline-flex items-center gap-2 text-lantern-400 text-sm font-semibold uppercase tracking-wide mb-4"
            >
                <i class="fa-solid fa-sharp fa-books"></i>
                Our Themes
            </span>
            <h1
                class="text-4xl md:text-5xl font-display font-bold text-white mb-6"
            >
                Explore Themes
            </h1>
            <p class="text-xl text-mystic-200 max-w-2xl mx-auto">
                Each month we pick a theme. Members read any book that fits,
                then share what they discovered.
            </p>
        </div>
    </section>

    <!-- Themes Content -->
    <section class="py-16 md:py-20 transition-colors duration-300">
        <div class="max-w-6xl mx-auto px-4">
            <!-- Current Theme -->
            {
                currentTheme && (
                    <div class="mb-16">
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-6 flex items-center gap-3">
                            <span class="text-lantern-500">
                                <i class="fa-solid fa-sharp fa-sparkles" />
                            </span>
                            Current Theme
                        </h2>
                        <div class="max-w-2xl">
                            <ThemeCard
                                title={currentTheme.data.title}
                                slug={currentTheme.id}
                                summary={currentTheme.data.summary}
                                status={currentTheme.data.status}
                                meetingDate={currentTheme.data.meetingDate}
                                tags={currentTheme.data.tags}
                            />
                        </div>
                    </div>
                )
            }

            <!-- Upcoming Themes -->
            {
                upcomingThemes.length > 0 && (
                    <div class="mb-16">
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-6 flex items-center gap-3">
                            <span class="text-bermuda-500">
                                <i class="fa-solid fa-sharp fa-calendar" />
                            </span>
                            Coming Up
                        </h2>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {upcomingThemes.map((theme) => (
                                <ThemeCard
                                    title={theme.data.title}
                                    slug={theme.id}
                                    summary={theme.data.summary}
                                    status={theme.data.status}
                                    meetingDate={theme.data.meetingDate}
                                    tags={theme.data.tags}
                                />
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- Past Themes -->
            {
                pastThemes.length > 0 && (
                    <div>
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-6 flex items-center gap-3">
                            <span class="text-mystic-400">
                                <i class="fa-solid fa-sharp fa-book" />
                            </span>
                            Past Themes
                        </h2>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {pastThemes.map((theme) => (
                                <ThemeCard
                                    title={theme.data.title}
                                    slug={theme.id}
                                    summary={theme.data.summary}
                                    status={theme.data.status}
                                    meetingDate={theme.data.meetingDate}
                                    tags={theme.data.tags}
                                    compact
                                />
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- Empty State -->
            {
                themes.length === 0 && (
                    <div class="text-center py-12">
                        <span class="text-6xl text-mystic-400 mb-4 block">
                            <i class="fa-solid fa-sharp fa-books" />
                        </span>
                        <h2 class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-2">
                            No themes yet!
                        </h2>
                        <p class="text-mystic-600 dark:text-mystic-400 mb-6">
                            Check back soon for our upcoming themes.
                        </p>
                        <a href="/submit" class="btn btn-primary">
                            Submit a Theme Idea
                        </a>
                    </div>
                )
            }
        </div>
    </section>

    <!-- CTA Section -->
    <section
        class="py-12 bg-white dark:bg-mystic-900 transition-colors duration-300"
    >
        <div class="max-w-3xl mx-auto px-4 text-center">
            <h2
                class="text-2xl font-display font-bold text-mystic-900 dark:text-mystic-100 mb-4"
            >
                Have a Theme Idea?
            </h2>
            <p class="text-mystic-600 dark:text-mystic-400 mb-6">
                We're always looking for fresh themes. "Cozy Apocalypse"?
                "Unreliable Narrators"? "Space Opera"? Submit your idea!
            </p>
            <a href="/submit" class="btn btn-secondary"> Submit a Theme </a>
        </div>
    </section>
</Layout>
